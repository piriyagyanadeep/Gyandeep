public class ReverseEachWord {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    
		String s="hello world";
		
		String s1[]=s.split(" ");
		
		String revw="";
		
		for(String s2:s1)
		{
		String rev="";
		for(int i=s2.length()-1;i>=0;i--)
		{
		rev=rev+s2.charAt(i);
		}
		revw=revw+rev+" ";
		}
		
		System.out.println(revw);
			
		
	}

}
